<h1>Create a user</h1>

<%
=begin %>
  <form action="/users" method="POST" accept-charset="UTF-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="username">Username:</label>
  <input type="text" id="username" name="user[username]">
  <br>
  <label for="email">Email:</label>
  <input type="email" id="email" name="user[email]">
  <br>
  <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]">
  <input type="submit" value="Submit">
  </form>
  <% =end %>

<% =begin %>
<%= form_tag("/users") do %>
  <%= label_tag(:username, "Username:") %>
  <%= text_field(:user, :username) %>
  <%= label_tag(:email, "Email:") %>
  <%= text_field(:user, :email) %>
  <%= label_tag(:password, "Password:") %>
  <%= text_field(:user, :password) %>
  <%= submit_tag %>
<% end %>
<%
=end %>

<%= form_for @user do |f|  %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: "Your user name here", value: "Default Value" %>
  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, placeholder: "example@example.com" %>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
  <%= f.submit value: "Create"%>
<% end %>
